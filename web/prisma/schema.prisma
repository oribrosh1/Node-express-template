generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
}

model Cart {
  customerId BigInt     @id @unique
  items      Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
